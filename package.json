{
    "scripts": {
        "bundle": "esbuild --format=esm --bundle --define:define.amd=false --loader:.png=dataurl --outdir=src/pylifemap/static src/js/widget.js",
        "dev": "npm run bundle -- --sourcemap=inline --watch",
        "test": "uv run pytest",
        "build": "npm run bundle -- --minify && uv build",
        "doc": "cd doc && uv run quartodoc build && uv run quartodoc interlinks && uv run quarto render",
        "preview": "cd doc && uv run quarto preview"
    },
    "devDependencies": {
        "esbuild": "^0.25.10"
    },
    "workspaces": [
        "packages/lifemapjs"
    ]
}
