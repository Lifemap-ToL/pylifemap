{
    "scripts": {
        "bundle_deck": "esbuild --format=esm --bundle --define:define.amd=false --outdir=src/pylifemap/static/deck src/js/widget.js",
        "bundle_nodeck": "npm run bundle_deck -- '--external:@deck.gl' --outdir=src/pylifemap/static/nodeck",
        "dev_deck": "npm run bundle_deck -- --sourcemap=inline --watch",
        "dev_nodeck": "npm run bundle_nodeck -- --sourcemap=inline --watch",
        "clean": "rm -rf src/pylifemap/static/deck/* && rm -rf src/pylifemap/static/nodeck/*",
        "bundle": "npm run clean && npm run bundle_deck -- --minify && npm run bundle_nodeck -- --minify",
        "build": "npm run bundle && uv build",
        "doc": "npm run bundle && cd doc && uv run quartodoc build && uv run quartodoc interlinks && uv run quarto render",
        "test": "uv run pytest",
        "preview": "cd doc && uv run quarto preview",
        "marimo": "ANYWIDGET_HMR=1 uv run --with marimo marimo edit",
        "jupyter": "ANYWIDGET_HMR=1 uv run --with jupyterlab jupyter lab"
    },
    "dependencies": {
        "@apache-arrow/es2015-esm": "^21.1.0",
        "@deck.gl/aggregation-layers": "^9.2.2",
        "@deck.gl/core": "^9.2.2",
        "@deck.gl/layers": "^9.2.2",
        "@observablehq/plot": "^0.6.17",
        "@zumer/snapdom": "^1.9.14",
        "d3": "^7.9.0",
        "lz4js": "^0.2.0",
        "ol": "^10.7.0"
    },
    "devDependencies": {
        "esbuild": "^0.25.10"
    }
}
